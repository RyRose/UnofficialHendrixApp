<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryan.unofficialhendrixapp" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBar"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_launcher" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewsDetailActivity"
            android:label="@string/title_activity_news_detail"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ryan.unofficialhendrixapp.activities.MainActivity" />
        </activity>
        <activity android:name=".activities.DirectoryDetailActivity"
            android:parentActivityName=".activities.MainActivity" >
        </activity>
        <provider
            android:authorities="com.ryan.unofficialhendrixapp.provider"
            android:name=".data.HendrixProvider"
            android:exported="false">
        </provider>
    </application>

</manifest>
