<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:contentDescription="@string/image_description_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/person_ImageView"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="200dp"
        android:minHeight="200dp"
        android:maxHeight="210dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_textView6"
        android:layout_below="@+id/person_textView7"
        android:layout_alignLeft="@+id/person_ImageView"
        android:textSize="16sp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_textView7"
        android:layout_below="@+id/person_textView2"
        android:layout_alignLeft="@+id/person_ImageView"
        android:textSize="16sp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_textView1"
        android:layout_below="@+id/person_ImageView"
        android:layout_alignLeft="@+id/person_ImageView"
        android:layout_alignStart="@+id/person_ImageView"
        android:textSize="22sp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_textView2"
        android:textSize="20sp"
        android:layout_below="@+id/person_textView1"
        android:layout_alignLeft="@+id/person_textView1"
        android:layout_alignStart="@+id/person_textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_textView5"
        android:autoLink="phone"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_textView4"
        android:autoLink="email"
        android:textSize="20sp"
        android:layout_below="@+id/person_textView6"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_staff"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_alignTop="@+id/person_textView4"
        android:layout_alignLeft="@+id/person_textView2"
        android:layout_alignStart="@+id/person_textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_staff"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/person_textView2" />

</RelativeLayout>